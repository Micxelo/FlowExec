<Window x:Class="FlowExec.WinMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowExec"
        xmlns:settings="clr-namespace:FlowExec.Properties"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        Title="FlowExec"
        WindowStartupLocation="Manual"
        Height="72"
        MaxHeight="72"
        MinHeight="72"
        ShowInTaskbar="False"
        Topmost="True" 
        ResizeMode="NoResize"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
        SizeToContent="Width"
        ui:ThemeManager.IsThemeAware="True"
        ui:WindowHelper.SystemBackdropType="{Binding Path=Backdrop, Source={x:Static settings:Settings.Default}}"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.Height="0"
        ui:TitleBar.ExtendViewIntoTitleBar="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <local:IntelliInput x:Name="InputBar"
                            Grid.Column="1"
                            Margin="8,0,8,0"
                            Text=""
                            Height="36"/>
        <Button x:Name="BtnIcon" 
                Grid.Column="0"
                Margin="12,0,0,0"
                IsTabStop="False"
                Height="36"
                Width="36"
                Padding="2,2,2,2">
            <local:FluentImage x:Name="BtnIconImage" 
                                Width="32" 
                                Height="32" 
                                Stretch="Uniform"
                                Source="/Assets/app.ico" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
        </Button>
        <Button x:Name="BtnRun" 
                Grid.Column="2"
                Margin="0,0,12,0"
                IsTabStop="False"
                Height="36"
                Width="36"
                Padding="0,0,0,0"
                FontFamily="Consolas"
                FontWeight="Bold"
                FontSize="24"
                ToolTip="{StaticResource wMain_btnRun_Tip}"
                Click="BtnRun_Click">
            >
        </Button>
    </Grid>
</Window>
    